<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    android:orientation="vertical"
    tools:context=".CreateAccountActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginScreenMargin"
                android:gravity="center"
                android:text="Create Account"
                android:textColor="@color/white"
                android:textSize="@dimen/titleSize" />


            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editHeight"
                android:layout_marginLeft="@dimen/editMargin"
                android:layout_marginTop="@dimen/loginScreenMargin"
                android:layout_marginRight="@dimen/editMargin"
                android:background="@drawable/view_rounded_white"
                android:drawableLeft="@drawable/ic_action_mail"
                android:drawablePadding="20dp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/baseColor" />


            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editHeight"
                android:layout_marginLeft="@dimen/editMargin"
                android:layout_marginTop="@dimen/loginScreenMargin"
                android:layout_marginRight="@dimen/editMargin"
                android:background="@drawable/view_rounded_white"
                android:drawableLeft="@drawable/ic_action_lock"
                android:drawablePadding="20dp"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textColor="@color/baseColor" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buttonHeight"
                android:layout_marginLeft="@dimen/buttonMargin"
                android:layout_marginTop="@dimen/loginScreenMargin"
                android:layout_marginRight="@dimen/buttonMargin"
                android:background="@drawable/view_rounded_white"
                android:text="Create"
                android:textColor="@color/baseColor"
                android:textSize="@dimen/buttonSize" />

            <TextView
                android:id="@+id/errorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/loginScreenMargin"
                android:gravity="center"
                android:text="入力に誤りがあります"
                android:textColor="@color/error"
                android:textSize="@dimen/errorMessageSize"
                android:visibility="invisible" />

        </LinearLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />

    </FrameLayout>

</LinearLayout>